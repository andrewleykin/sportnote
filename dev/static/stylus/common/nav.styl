.menu
    @media (max-width: 768px) 
        order: 4
.menu__list
    display flex
    margin-right 60px
    @media (max-width: 1200px) 
        margin-right 30px
    @media (max-width: 900px) 
        margin-right 15px
    @media (max-width: 768px)
        margin-right 0 
        margin-top 20px
.menu__item
    font-family: Montserrat;
    font-size: rem(20)
    font-weight: normal;
    font-style: normal;
    color: #ffffff;
    margin-right 19px
    &:last-child
        margin-right 0px
    @media (max-width: 1200px) 
        margin-right 14px;
    @media (max-width: 900px) 
        margin-right 9px
    @media (max-width: 768px) 
        margin-right 25px
        font-size: rem(28)
    @media (max-width: 470px)
        margin-right 15px
        font-size: rem(26)
    @media (max-width: 420px)
        margin-right 10px
        font-size: rem(23)
    @media (max-width: 360px)
        margin-right 8px
        font-size: rem(22)
.registration .header .menu__link
    color #000
    transition: 0.3s
    &:hover
        color: #21a2ad

.menu__link
    color #fff
    transition: 0.3s
    white-space nowrap
    &:hover
        color: #21a2ad