.hero
    background:url(../img/content/hero.jpg) 
    background-repeat: no-repeat
    background-size: cover
    position relative
    color: #fff
    z-index 0
    &:before
        content: ""
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(0,0,0,0.6)
        z-index -1

.hero .container
    display flex
    justify-content center
    align-items: center

.hero__content
    display flex
    flex-direction: column
    align-items: center
    border: solid 2px #ffffff
    border-radius: 25px
    border-bottom-left-radius: 0px
    margin 272px 0 293px 0

.hero__title
    font-family: Montserrat;
    font-size: 30px;
    font-weight: normal;
    font-style: normal;
    padding-top: 74px
    padding-bottom 64px;
    line-height: 0.28;

.hero__form
    display flex
    flex-direction: column
    align-items: center
    margin-bottom 32px
    padding 0 98px

.hero__input
    width: 420px;
    height: 70px;
    border: solid 2px #ffffff;
    border-radius: 25px;
    background: none
    margin-bottom 18px
    font-family: Montserrat;
    font-size: 30px;
    font-weight: normal;
    font-style: normal;
    line-height: 0.28;
    padding-left: 30px
    color #fff
    &::placeholder 
        color: #fff
    &.login
        border-bottom-left-radius: 0px
    &.password
        border-top-left-radius: 0px

.hero__button.button
    border-top-left-radius: 0px
    border-top-right-radius: 0px
    padding: 24px 67px
    font-family: Montserrat;
    font-size: 30px;
    line-height: 20px;
    font-weight: normal;
    font-style: normal;
    color: #21a2ad;


.hero__reg,.hero__paswrec
    font-family: Montserrat;
    font-size: 20px;
    font-weight: normal;
    font-style: normal;
    color: #ffffff;
    cursor pointer

.hero__reg
    margin-bottom:10px

.hero__paswrec
    padding-bottom 45px