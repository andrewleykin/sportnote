
.hero
    display flex
    justify-content center
    align-items: center
    color: #fff
    z-index 0

.hero__content
    display flex
    flex-direction: column
    align-items: center
    border: solid 2px #ffffff
    border-radius: 25px
    border-bottom-left-radius: 0px
    margin 272px 0 15px 0
    @media (max-width: breakpoint-laptop) 
        margin: 230px 0 15px
    @media (max-width: breakpoint-tabletL) 
        margin: 200px 0 15px;
    @media (max-width: breakpoint-phone)
        margin-top 150px

.hero__title
    font-size: rem(30)
    font-weight: normal;
    font-style: normal;
    padding-top: 70px
    padding-bottom 64px;
    line-height: 0.28;
    @media (max-width: breakpoint-laptop) 
        font-size: rem(28)
        padding-top 65px
        padding-bottom 55px 
    @media (max-width: breakpoint-tabletL) 
        padding-top 60px
        padding-bottom 50px;
    @media (max-width: breakpoint-tabletM) 
        padding-top 50px
        padding-bottom 35px
    @media (max-width: breakpoint-tabletS)
        padding-top 40px
        padding-bottom 30px
    @media (max-width: breakpoint-phone)
        padding-top 30px
        padding-bottom 20px
        font-size: rem(25)

.hero__form
    display flex
    flex-direction: column
    align-items: center
    margin-bottom 32px
    padding 0 98px
    @media (max-width: breakpoint-laptop) 
        margin-bottom 28px
        padding: 0 88px
    @media (max-width: breakpoint-tabletL) 
        margin-bottom 22px
        padding 0 78px
    @media (max-width: breakpoint-tabletM) 
        margin-bottom 17px
        padding 0 63px
    @media (max-width: breakpoint-tabletS)
        margin-bottom 15px
        padding 0 45px
    @media (max-width: breakpoint-phone)
        margin-bottom 10px
        padding: 0 20px

.hero__input
    width: 420px;
    height: 70px;
    border: solid 2px #ffffff;
    border-radius: 25px;
    background: none
    margin-bottom 18px
    font-family: Montserrat;
    font-size: rem(30)
    font-weight: normal;
    font-style: normal;
    line-height: 0.28;
    padding-left: 30px
    color #fff
    &::placeholder 
        color: #fff
    &.login
        border-bottom-left-radius: 0px
    &.password
        border-top-left-radius: 0px
    @media (max-width: breakpoint-laptop) 
        width 380px
        height 65px
        padding-left 25px
        font-size: rem(26)
    @media (max-width: breakpoint-tabletL) 
        width 350px
        height 60px
        margin-bottom 15px
        padding-left 20px
    @media (max-width: breakpoint-tabletM) 
        width 320px
        height 50px
        margin-bottom 12px
        padding-left 15px
        font-size: rem(23)
    @media (max-width: breakpoint-tabletS)
        width 270px
        height 40px
        margin-bottom 10px
        font-size: rem(20)
    @media (max-width: breakpoint-phone)
        width 240px
        height 35px
        font-size: rem(18)
.hero__button.button
    border-top-left-radius: 0px
    border-top-right-radius: 0px
    padding: 24px 67px
    font-family: Montserrat;
    font-size: rem(30)
    line-height: rem(20)
    font-weight: normal;
    font-style: normal;
    color: #21a2ad;
    @media (max-width: breakpoint-laptop) 
        padding: 22px 63px
        font-size: rem(28)
    @media (max-width: breakpoint-tabletL) 
        padding 20px 60px
        font-size: rem(26)
    @media (max-width: breakpoint-tabletM) 
        padding: 16px 40px
    @media (max-width: breakpoint-tabletS)
        padding 13px 30px
     @media (max-width: breakpoint-phone)
         padding 12px 25px
    

.hero__reg,
.hero__paswrec
    font-size: rem(20)
    font-weight: normal;
    color: #ffffff;
    cursor pointer
    @media (max-width: breakpoint-tabletS)
        font-size: rem(18)
    @media (max-width: breakpoint-phone)
        font-size: rem(16)

.hero__reg
    margin-bottom:10px
    @media (max-width: breakpoint-tabletS)
        margin-bottom 8px

.hero__paswrec
    padding-bottom 45px
    @media (max-width: breakpoint-laptop) 
        padding-bottom 40px
    @media (max-width: breakpoint-tabletL) 
        padding-bottom 35px
    @media (max-width: breakpoint-tabletM) 
        padding-bottom 30px
    @media (max-width: breakpoint-tabletS)
        padding-bottom 25px
    @media (max-width: breakpoint-phone)
        padding-bottom 20px