.header 
    position fixed
    top: 57px
    z-index 1
    left: 50%;
    transform: translateX(-50%);
    min-width: 1170px;
    @media (max-width: 1200px) 
        max-width: 1170px;
        min-width 0px;
        top 37px
    @media (max-width: 900px) 
        top 22px
    @media (max-width: 768px) 
        width 100%

.header .container
    display flex
    align-items: center
    @media (max-width: 768px) 
        flex-wrap: wrap
        justify-content center
    
.header__logo-wrp
    width: 241px;
    height: 95px;
    margin-right 50px
    cursor pointer
    @media (max-width: 1200px) 
        width 200px
        height 80px;
        margin-right 35px;
    @media (max-width: 900px) 
        width 150px
        height 60px
        margin-right 20px;
    @media (max-width: 768px) 
        margin-right 100px
    @media (max-width: 470px)
        margin-right 50px
    @media (max-width: 420px)
        margin-right 20px
    @media (max-width: 360px)
        width 130px
        height 45px
.header__button
    margin-right 68px
    @media (max-width: 1200px) 
        margin-right 38px;
    @media (max-width: 900px) 
        margin-right 23px;
    @media (max-width: 768px) 
        margin-right 20px
    @media (max-width: 470px)
        margin-right 15px
    @media (max-width: 420px)
        margin-right 10px
.header__socials
    width: 38px;
    height: 34px;
    cursor pointer
    & svg 
        width 100%
        height 100%
        fill: #fff
    @media (max-width: 1200px) 
        width 32px
        height 28px;
    @media (max-width: 900px) 
        width 28px
        height 24px
    @media (max-width: 470px)
        width 26px
        height 22px
    @media (max-width: 420px)
        width 24px
        height 20px
.registration .header .header__logo-wrp img
    filter: brightness(0)

.registration .header .header__button
    background-color: #21a2ad
    color #fff
    border-radius: 30px
    padding: 14px 45px
    @media (max-width: 900px) 
        padding: 10px 25px;
    @media (max-width: 420px)
        padding 8px 15px
    @media (max-width: 360px)
        padding 7px 13px
    &:hover
        color: #000
        background-color: #ddd
.registration .header .header__socials
    & svg 
        fill: #000

