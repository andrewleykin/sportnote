.reg__form
    display flex
    flex-direction: column
    align-items: center
.reg__input
    width: 420px;
    height: 56px;
    border-radius: 25.5px;
    border: solid 2px #000;
    padding-left 30px
    font-family: Montserrat;
    font-size: 20px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 0.42;
    letter-spacing: normal;
    text-align: left;
    margin-bottom 14px;
    &::placeholder
        color: #000

.reg__input:nth-child(7)
    margin-bottom 0

.reg__persdata-wrp
    margin: 31px 0
    width: 100%;
    
.reg__persdata-text
    font-family: Montserrat;
    font-size: 20px;
    font-weight: normal;
    font-style: normal;
    position relative
    padding-left: 60px
    &:before
        content: ""
        position absolute
        top: -50%
        left 0px
        width 50px
        height 45px
        border-radius: 50%;
        border: solid 2px #000;
        background-color: #ffffff;
.reg__persdata-text:after
    content: ""
    opacity 0
    position absolute
    top: -1px
    left 14px
    width 22px
    height 22px
    border-radius: 50%;
    border: solid 2px #000;
    background-color: #000;
    transition: 0.15s

.reg__persdata:checked + .reg__persdata-text:after
    opacity 1

.reg__persdata
    width: 50px;
    height: 45px;
    display none

.reg__button.button
    background-color #21a2ad
    padding 14px 40px
    color #fff
    border-radius: 30px
    &:hover
        color: #000
        background-color: #ddd