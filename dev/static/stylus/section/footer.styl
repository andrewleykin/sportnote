.footer
    margin-bottom 34px
    color: #fff
    @media (max-width: 1200px) 
        margin-bottom 14px

.wrapper.registration .footer 
    @media (max-width: 900px)
        position static
        transform: translateX(0)
        margin-bottom 14px
.footer__copyright
    display flex
    flex-direction: column
    align-items: center
    font-family: Montserrat;
    font-size: rem(20)
    font-weight: normal;
    font-style: normal;
    color: #ffffff;
    line-height: 1;
    @media (max-width: 900px) 
        font-size: rem(16)
    @media (max-width: 420px)
        font-size: rem(12)

.registration .footer .footer__comp,.registration .footer .footer__reserved
    color: #000